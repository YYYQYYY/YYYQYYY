<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="@color/white">

	<TextView android:id="@+id/txvEListTitle"
		android:layout_height="40dp" android:layout_width="fill_parent"
		android:text="@string/eventList" android:textStyle="bold"
		android:textSize="25sp" android:background="@color/blue" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical"
		android:layout_weight="1">

		<ListView android:id="@+id/lsvEListEvent"
			android:layout_height="fill_parent" android:layout_width="fill_parent"
			android:layout_marginTop="10dp" android:tag="s"
			android:layout_weight="1" />

		<RelativeLayout android:id="@+id/RelativeLayout01"
			android:layout_width="wrap_content" android:layout_height="wrap_content">

			<Button android:id="@+id/btnEListPreviou" android:text="@string/previousEvent"
				android:layout_alignParentLeft="true" android:layout_height="50dp"
				android:layout_width="80dp" android:textSize="20sp"
				android:layout_marginTop="10dp" />

			<Button android:id="@+id/btnEListCreate" android:text="@string/newEvent"
				android:layout_centerHorizontal="true" android:layout_height="50dp"
				android:textSize="20sp" android:layout_marginTop="10dp"
				android:layout_width="wrap_content" />

			<Button android:id="@+id/btnEListNext" android:text="@string/nextEvent"
				android:layout_alignParentRight="true" android:layout_height="50dp"
				android:layout_width="80dp" android:layout_marginTop="10dp"
				android:textSize="20sp" />

		</RelativeLayout>

	</LinearLayout>

</LinearLayout>
