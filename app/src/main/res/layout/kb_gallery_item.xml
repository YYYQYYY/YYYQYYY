<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:focusable="true"
    android:background="@drawable/gallery_selector">

    <TextView
        android:id="@+id/txvBookName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:textColor="#FFFFFFFF"
        android:textColorHighlight="#FF000000" />

    <TextView
        android:id="@+id/txvSaveTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@id/txvBookName"
        android:textColor="#FFFFFFFF"
        android:textColorHighlight="#FF000000" />

    <TextView
        android:id="@+id/txvSummary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:focusable="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        android:layout_below="@id/txvSaveTime"
        android:textColor="#FFFFFFFF"
        android:textColorHighlight="#FF000000" />

</RelativeLayout>
