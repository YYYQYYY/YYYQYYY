<?xml version="1.0" encoding="utf-8"?>
<com.yuqinyidev.android.framework.widget.autolayout.AutoCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="550px"
    android:layout_marginBottom="15px"
    android:layout_marginRight="15px">

    <ImageView
        android:id="@+id/imv_avator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="#000000" />

    <TextView
        android:id="@+id/txv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginLeft="15px"
        android:text="SS"
        android:textColor="@color/white"
        android:textSize="40px" />

</com.yuqinyidev.android.framework.widget.autolayout.AutoCardView>